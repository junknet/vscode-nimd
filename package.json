{
  "name": "nimlsp",
  "displayName": "nimlsp",
  "description": "nim lsp extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:nim",
    "onCommand:nimlsp.activate"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "nim",
        "aliases": [
          "Nim",
          "nim"
        ],
        "extensions": [
          ".nim",
          ".nims",
          "nim.cfg",
          ".nim.cfg"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "nimble",
        "aliases": [
          "Nimble",
          "nimble"
        ],
        "extensions": [
          ".nimble"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": [
      {
        "type": "object",
        "title": "nimlsp",
        "properties": {
          "nimlsp.path": {
            "type": "string",
            "default": "nimlsp",
            "scope": "machine-overridable",
            "description": "The path to nimlsp executable, e.g.: /usr/bin/nimlsp."
          },
          "nimlsp.arguments": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string"
            },
            "description": "Arguments for nimlsp server."
          }
        }
      }
    ],
    "grammars": [
      {
        "language": "nim",
        "scopeName": "source.nim",
        "path": "./syntaxes/nim.json"
      },
      {
        "language": "nimble",
        "scopeName": "source.nimble",
        "path": "./syntaxes/nimble.json"
      }
    ],
    "commands": [
      {
        "command": "nimlsp.activate",
        "title": "nimlsp: Manually activate extension"
      },
      {
        "command": "nimlsp.restart",
        "title": "nimlsp: Restart language server"
      }
    ],
    "snippets": [
      {
        "language": "nim",
        "path": "./snippets/nim.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "7.1.0-next.1"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
